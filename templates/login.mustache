    document.getElementById('password').addEventListener('input', function (e) {
        // get the password field
        const password = document.getElementById('password');
        
        // get the eye icon
        const eyeIcon = document.getElementById('togglePassword');
        
        // if password field is not empty, show the eye icon
        if (password.value.length > 0) {
            eyeIcon.className = eyeIcon.className.replace('d-none', 'd-block');
            eyeIcon.className = eyeIcon.className.replace(
                "d-none",
                "d-block"
            );
        } else {
            eyeIcon.className = eyeIcon.className.replace('d-block', 'd-none');
            eyeIcon.className = eyeIcon.className.replace(
                "d-block",
                "d-none"
            );
        }
    });

    const passwordField = document.getElementById("password");
    const togglePassword = document.querySelector(".password-toggle-icon i");

    togglePassword.addEventListener("click", function () {
        if (passwordField.type === "password") {
            passwordField.type = "text";
            togglePassword.classList.remove("fa-eye");
            togglePassword.classList.add("fa-eye-slash");
        } else {
            passwordField.type = "password";
            togglePassword.classList.remove("fa-eye-slash");
            togglePassword.classList.add("fa-eye");
        }
    });
